{
	"name": "piggly@js-pix",
	"version": "0.1.0",
	"description": "Uma biblioteca para preparar e gerar o c√≥digo Pix do Banco Central do Brasil.",
	"keywords": [
		"pix",
		"bb",
		"emv",
		"brasil",
	],
	"scripts": {
		"ts:check": "tsc --noEmit",
		"ts:check-watch": "npm run ts:check -- --watch",
		"ts:build": "tsc -p tsconfig.build.json --emitDeclarationOnly",
		"ts:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint --ext .ts,.js --ignore-path .gitignore --fix src",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"prepare": "npm run ts:build",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"test": "cross-env NODE_ENV=test jest",
		"test:debug": "cross-env NODE_ENV=test node --inspect ./node_modules/.bin/jest --runInBand"
	},
	"author": "caiquearaujo",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/piggly-dev/js-pix.git"
	},
	"bugs": {
		"url": "https://github.com/piggly-dev/js-pix/issues"
	},
	"dependencies": {
	},
	"devDependencies": {
		"@types/jest": "^28.1.1",
		"@types/node": "^17.0.43",
		"@typescript-eslint/eslint-plugin": "^5.28.0",
		"@typescript-eslint/parser": "^5.28.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"eslint": "^8.17.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.1",
		"nodemon": "^2.0.16",
		"prettier": "^2.7.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.5",
		"typescript": "^4.7.3"
	},
	"_moduleAliases": {
		"@": "build/"
	}
}
