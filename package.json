{
	"name": "@piggly/js-pix",
	"version": "0.1.0",
	"description": "Uma biblioteca para preparar e gerar o c√≥digo Pix do Banco Central do Brasil.",
	"keywords": [
		"pix",
		"bb",
		"emv",
		"brasil"
	],
	"scripts": {
		"ts:check": "tsc --noEmit",
		"ts:check-watch": "npm run ts:check -- --watch",
		"ts:build": "tsc -p tsconfig.build.json --emitDeclarationOnly",
		"build": "rimraf ./dist && npm run ts:build && rollup -c",
		"lint": "eslint --ext .ts,.js --ignore-path .gitignore --fix src",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"version": "npm run format",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"test": "jest",
		"test:debug": "node --inspect ./node_modules/.bin/jest --runInBand"
	},
	"main": "dist/pix.cjs.js",
	"types": "dist/pix.d.ts",
	"module": "dist/pix.esm.js",
	"browser": "dist/pix.umd.js",
	"unpkg": "dist/pix.umd.min.js",
	"author": "caiquearaujo",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/piggly-dev/js-pix.git"
	},
	"bugs": {
		"url": "https://github.com/piggly-dev/js-pix/issues"
	},
	"dependencies": {
		"lodash.deburr": "^4.1.0",
		"qrcode": "^1.5.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.18.2",
		"@babel/preset-typescript": "^7.17.12",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-commonjs": "^22.0.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.3.3",
		"@types/jest": "^28.1.1",
		"@types/lodash.deburr": "^4.1.7",
		"@types/node": "^17.0.43",
		"@types/qrcode": "^1.4.2",
		"@typescript-eslint/eslint-plugin": "^5.28.0",
		"@typescript-eslint/parser": "^5.28.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"babel-plugin-module-resolver": "^4.1.0",
		"eslint": "^8.17.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.1",
		"prettier": "^2.7.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.75.7",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^28.0.5",
		"typescript": "^4.7.3"
	},
	"files": [
		"dist/**/*"
	],
	"_moduleAliases": {
		"@": "dist/"
	}
}
